{
  "name": "connect4-production",
  "version": "5.0.0",
  "description": "Connect4 Premium Gaming UI with production build system",
  "scripts": {
    "build:css": "tailwindcss -i assets/css/tailwind-source.css -o css/tailwind-built.css --config tailwind.config.js --minify",
    "watch:css": "tailwindcss -i assets/css/tailwind-source.css -o css/tailwind-built.css --config tailwind.config.js --watch",
    "dev": "npm run watch:css",
    "build": "npm run build:css",
    "serve": "python3 -m http.server 8000",
    "test": "echo 'Connect4 Premium Gaming UI v5.0 with production build system'"
  },
  "devDependencies": {
    "tailwindcss": "^4.1.11"
  },
  "keywords": [
    "connect4",
    "vier-gewinnt",
    "logiccastle",
    "wasm",
    "tailwindcss",
    "goldstandard"
  ],
  "author": "LogicCastle",
  "license": "MIT"
}